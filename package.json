{
  "name": "docnest",
  "version": "0.0.2",
  "description": "Doctor Nest",
  "author": "Tinker",
  "license": "MIT",
  "scripts": {
    "format": "prettier --write \"**/*.ts\"",
    "build": "rm -rf build && tsc",
    "test": "NODE_ENV=test jest --env=node",
    "start": "npm run start:development",
    "start:development": "cross-env NODE_ENV=development nodemon",
    "start:staging": "cross-env NODE_ENV=staging npm run build && node ./build/main.js",
    "start:production": "cross-env NODE_ENV=production npm run build && node ./build/main.js",
    "migration:run": "npm run build && typeorm migration:run",
    "migration:revert": "npm run build && typeorm migration:revert",
    "migration:create": "npm run build && typeorm migration:create --name",
    "migration:generate": "npm run build && typeorm migration:generate --name"
  },
  "dependencies": {
    "@nestjs/common": "^5.0.0",
    "@nestjs/core": "^5.0.0",
    "@nestjs/graphql": "^3.0.0",
    "@nestjs/testing": "^5.1.0",
    "@nestjs/typeorm": "^5.0.2",
    "apollo-server-express": "^1.4.0",
    "bcrypt": "^3.0.0",
    "class-transformer": "^0.1.9",
    "config": "^2.0.0",
    "cross-env": "^5.2.0",
    "date-fns": "^1.29.0",
    "graphql": "^0.13.2",
    "graphql-tools": "^3.0.5",
    "jsonwebtoken": "^8.3.0",
    "lodash": "^4.17.10",
    "pg": "^7.4.3",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^6.0.0",
    "typeorm": "^0.2.7",
    "typescript": "^2.6.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^2.0.0",
    "@types/config": "0.0.34",
    "@types/express": "^4.0.39",
    "@types/jest": "^23.3.0",
    "@types/jsonwebtoken": "^7.2.8",
    "@types/lodash": "^4.14.115",
    "@types/node": "^9.3.0",
    "jest": "^23.4.1",
    "nodemon": "^1.14.1",
    "prettier": "^1.11.1",
    "supertest": "^3.1.0",
    "ts-jest": "^23.0.1",
    "ts-node": "^7.0.0",
    "tsconfig-paths": "^3.4.2",
    "tslint": "5.3.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".test.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage"
  }
}
